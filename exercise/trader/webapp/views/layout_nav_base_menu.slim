    == nav_link("Home"      , "/")
    == nav_link("Issues-#{Issue.open.count}"                 , "/issues")
    / == nav_link("Contracts-#{0 #current_user.contracts.length}" , "/contracts")
    == nav_link("Contracts-#{"0"}" , "/contracts")

ul.navbar-nav.flex-row
  - if logged_in?
    == nav_btn(account_lbl(current_user), "/account") if consented?
    == nav_link("Logout"  , "/logout")
    == nav_link("Help"    , "/help")
  - else
    == nav_link("Login"   , "/login")
    == nav_link("Help"    , "/help")
